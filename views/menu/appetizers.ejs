<%- include('../partials/boilerplate')%>

<% for(let i = 0; i < appetizers.length; i++){ %>
<div class="btn-group" role="group" aria-label="Example"></div>
  <button type="button" class="btn btn-primary m-3" data-toggle="modal" data-target="#modal<%= + i %>"><%=appetizers[i].title%></button>
  <% if(currentUser && currentUser.admin){ %>
  <a href="/product/edit/<%=appetizers[i].id%>"><button type="button" class="btn btn-group-sm btn-secondary m-3">Edit</button></a>
  <% } %>
</div>

<div class="modal fade" id="modal<%= + i %>" tabindex="-1" role="dialog" aria-labelledby="<%=appetizers[i].id%>" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <form action="/product/<%=appetizers[i]._id%>/kitchen" method="POST">
          <img src="<%=appetizers[i].image%>" alt="" class="w-50">
        <h2 class="modal-title" id="<%=appetizers[i].title%>" name="<%=appetizers[i].title%>" value="<%=appetizers[i].title%>"><%=appetizers[i].title%></h5>
        <div class="modal-body">
          <h3><%=appetizers[i].description%></h3>
          <h2>Price: $<%=appetizers[i].price%></h2>
                <div class="form-check">
                <input class="form-check-input" type="radio" name="qty" id="qty1" value=1 checked>
                <label class="form-check-label" for="qty" name="qty">
                    1
                </label>
                </div>
                <div class="form-check">
                <input class="form-check-input" type="radio" name="qty" id="qty2" value=2>
                <label class="form-check-label" for="qty" name="qty">
                    2
                </label>
                </div>

        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-success">Order</button>
        </div>
        </form>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
    </div>
  </div>
</div>
<% } %>

<%- include('../partials/footer')%>
